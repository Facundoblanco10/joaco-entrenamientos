---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import Offers from '../components/Offers.astro';
import Testimonials from '../components/Testimonials.astro';
import HeroFooter from '../components/HeroFooter.astro';
---

<Layout title="Joaco Entrenamientos">
    <main>
        <!-- Add Call To action, company Name and Button text2 -->
        <Hero
            callToAction="Se tu mejor versión"
            ,
            buttonText="Unete a nosotros"
            companyName="Joaco Entrenamientos"
        />
        <Offers />
        <About
            linkText="/about-us"
            imageOne="gym-instructor.jpg"
            ,
            imageTwo="gym-femaleinstructor.jpg"
            imageThree='skipping.jpg'
        />
        <Testimonials />
        <HeroFooter callToAction="Contáctanos" />
    </main>
</Layout>
